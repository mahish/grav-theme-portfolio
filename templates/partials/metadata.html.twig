{% for meta in page.metadata %}
  <meta
    {% if meta.name %}name="{{ meta.name }}" {% endif %}
    {% if meta.http_equiv %}http-equiv="{{ meta.http_equiv }}" {% endif %}
    {% if meta.charset %}charset="{{ meta.charset }}" {% endif %}
    {% if meta.property %}property="{{ meta.property }}" {% endif %}
    {% if meta.content %}content="{{ meta.content }}" {% endif %}
  />
{% endfor %}

<meta property="og:title" content="{{ site.title|e('html') }}">
<meta property="og:url" content="{{ uri.base }}">
<meta property="og:type" content="website">
<meta property="og:image" content="{{ page.media.images|first.url }}">
<meta property="og:description" content="{{ site.metadata.description }}">
<meta name="twitter:url" content="{{ uri.base }}">
<meta name="twitter:title" content="{{ site.title|e('html') }}">
<meta name="twitter:description" content="{{ site.metadata.description }}">
<meta name="twitter:image" content="{{ page.media.images|first.url }}">
